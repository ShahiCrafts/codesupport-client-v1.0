# ============================================
# CODESUPPORT CLIENT - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
VITE_API_URL=http://localhost:5000/api

# WebSocket/Socket.io URL for real-time features
VITE_SOCKET_URL=http://localhost:5000

# ============================================
# AUTHENTICATION
# ============================================
# OAuth Configuration (Google)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/oauth/callback

# OAuth Configuration (GitHub)
VITE_GITHUB_CLIENT_ID=your_github_client_id_here
VITE_GITHUB_REDIRECT_URI=http://localhost:5173/auth/oauth/callback

# ============================================
# APPLICATION SETTINGS
# ============================================
# App environment (development, staging, production)
VITE_APP_ENV=development

# Enable debug mode (true/false)
VITE_DEBUG=true

# ============================================
# EXTERNAL SERVICES
# ============================================
# WhatsApp Business API (optional)
VITE_WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_id
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_account_id

# File upload limits (in MB)
VITE_MAX_FILE_SIZE=25
VITE_MAX_FILES=10

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_WORKSPACES=true
VITE_ENABLE_ANALYTICS=true
